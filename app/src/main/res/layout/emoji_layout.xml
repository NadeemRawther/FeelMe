<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/autisticimg">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="50dp">

        <ImageView
            android:id="@+id/angrye"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="3"
            android:layout_column="0"
            app:srcCompat="@drawable/angry" />

        <ImageView
            android:id="@+id/confusede"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="4"
            android:layout_column="2"
            app:srcCompat="@drawable/confused" />

        <ImageView
            android:id="@+id/sade"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="1"
            app:srcCompat="@drawable/sad" />

        <ImageView
            android:id="@+id/sick"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="2"
            app:srcCompat="@drawable/sick" />

        <ImageView
            android:id="@+id/happye"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="4"
            android:layout_column="3"
            app:srcCompat="@drawable/happy" />

        <ImageView
            android:id="@+id/pain"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="3"
            app:srcCompat="@drawable/pain" />


    </GridLayout>
</RelativeLayout>